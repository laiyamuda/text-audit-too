<body>
    <div class="container">
        <div class="header">
            <h1>Text Diff Tool</h1>
            <p>Compare two texts side by side</p>
        </div>

        <div class="controls">
            <button class="btn" onclick="compareTexts()">Compare</button>
            <button class="btn btn-secondary" onclick="clearAll()">Clear All</button>
        </div>

        <div class="diff-container" id="diffContainer">
            <div class="diff-panel">
                <div class="panel-header">Original Text</div>
                <textarea class="text-input" id="text1" placeholder="Paste your original text here..."></textarea>
            </div>
            <div class="diff-panel">
                <div class="panel-header">Modified Text</div>
                <textarea class="text-input" id="text2" placeholder="Paste your modified text here..."></textarea>
            </div>
        </div>

        <div class="stats" id="stats" style="display: none;">
            <div class="stat-item">
                <span>Lines added:</span>
                <span class="stat-added" id="addedCount">0</span>
            </div>
            <div class="stat-item">
                <span>Lines removed:</span>
                <span class="stat-removed" id="removedCount">0</span>
            </div>
        </div>
    </div>

    <script>
        function compareTexts() {
            const text1 = document.getElementById('text1').value;
            const text2 = document.getElementById('text2').value;

            const lines1 = text1.split('\n');
            const lines2 = text2.split('\n');

            const diff = computeDiff(lines1, lines2);
            displayDiff(diff);
        }

        function computeDiff(lines1, lines2) {
            const m = lines1.length;
            const n = lines2.length;
            const lcs = [];

            // Create LCS matrix
            const dp = Array(m + 1).fill(null).map(() => Array(n + 1).fill(0));

            for (let i = 1; i <= m; i++) {
                for (let j = 1; j <= n; j++) {
                    if (lines1[i - 1] === lines2[j - 1]) {
                        dp[i][j] = dp[i - 1][j - 1] + 1;
                    } else {
                        dp[i][j] = Math.max(dp[i - 1][j], dp[i][j - 1]);
                    }
                }
            }

            // Backtrack to find diff
            const result = [];
            let i = m, j = n;

            while (i > 0 || j > 0) {
                if (i > 0 && j > 0 && lines1[i - 1] === lines2[j - 1]) {
                    result.unshift({ type: 'unchanged', left: lines1[i - 1], right: lines2[j - 1] });
                    i--;
                    j--;
                } else if (j > 0 && (i === 0 || dp[i][j - 1] >= dp[i - 1][j])) {
                    result.unshift({ type: 'added', left: '', right: lines2[j - 1] });
                    j--;
                } else if (i > 0) {
                    result.unshift({ type: 'removed', left: lines1[i - 1], right: '' });
                    i--;
                }
            }

            return result;
        }

        function displayDiff(diff) {
            const container = document.getElementById('diffContainer');
            container.innerHTML = '';

            const leftPanel = document.createElement('div');
            leftPanel.className = 'diff-panel';
            leftPanel.innerHTML = '<div class="panel-header">Original Text</div><div class="diff-output" id="leftOutput"></div>';

            const rightPanel = document.createElement('div');
            rightPanel.className = 'diff-panel';
            rightPanel.innerHTML = '<div class="panel-header">Modified Text</div><div class="diff-output" id="rightOutput"></div>';

            container.appendChild(leftPanel);
            container.appendChild(rightPanel);

            const leftOutput = document.getElementById('leftOutput');
            const rightOutput = document.getElementById('rightOutput');

            let addedCount = 0;
            let removedCount = 0;

            diff.forEach(item => {
                const leftLine = document.createElement('div');
                const rightLine = document.createElement('div');

                if (item.type === 'unchanged') {
                    leftLine.className = 'diff-line unchanged';
                    leftLine.textContent = item.left || ' ';
                    rightLine.className = 'diff-line unchanged';
                    rightLine.textContent = item.right || ' ';
                } else if (item.type === 'removed') {
                    leftLine.className = 'diff-line removed';
                    leftLine.textContent = item.left || ' ';
                    rightLine.className = 'diff-line';
                    rightLine.textContent = ' ';
                    removedCount++;
                } else if (item.type === 'added') {
                    leftLine.className = 'diff-line';
                    leftLine.textContent = ' ';
                    rightLine.className = 'diff-line added';
                    rightLine.textContent = item.right || ' ';
                    addedCount++;
                }

                leftOutput.appendChild(leftLine);
                rightOutput.appendChild(rightLine);
            });

            // Update stats
            document.getElementById('addedCount').textContent = addedCount;
            document.getElementById('removedCount').textContent = removedCount;
            document.getElementById('stats').style.display = 'flex';
        }

        function clearAll() {
            document.getElementById('text1').value = '';
            document.getElementById('text2').value = '';
            
            const container = document.getElementById('diffContainer');
            container.innerHTML = `
                <div class="diff-panel">
                    <div class="panel-header">Original Text</div>
                    <textarea class="text-input" id="text1" placeholder="Paste your original text here..."></textarea>
                </div>
                <div class="diff-panel">
                    <div class="panel-header">Modified Text</div>
                    <textarea class="text-input" id="text2" placeholder="Paste your modified text here..."></textarea>
                </div>
            `;
            
            document.getElementById('stats').style.display = 'none';
        }
    </script>
</body>
